// ************************
// About the size of the Images and the Videos on wide screens
@media screen and (min-width: 1200px) {
  .view-viewview .block.align.center {
    text-align: center;

    iframe,
    img:not(.placeholder),
    .video-inner{
      max-width: 130%;
      margin-right: auto;
      margin-left: 50%;
      transform: translateX(-61.5%);

      &.medium {
        max-width: 50%;
      }

      &.small {
        max-width: 25%;
      }
    }

    iframe {
      width: 130%;
    }

    .video-inner {
      width: 930px;
      margin-left: 50%;
      transform: translateX(-61.5%);
    }
  }

  .view-viewview .columns-view .block.image.align.center {
    img {
      max-width: 100% !important;
    }
  }

  //image credits section
  .view-viewview {
    #photo-credit.left {
      width: 114% !important;
      margin-right: auto;
      margin-left: 40%;
      transform: translateX(-61.5%);
    }

    #photo-credit.right {
      width: 130% !important;
      margin-right: auto;
      margin-left: 50%;
      transform: translateX(-61.5%);
    }
    #photo-credit{
      margin-left: -35%;
    }
  }
}

